@model RealEstateAspNetCore3._1.Models.Neighborhood

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="row">
        <!--Filtreleme-->




        <br />
        <div class="col-md-9">
            <div class="thumbnail" style="width:845px">


                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"> <a href="/Admin/Index"> Admin Panel</a></li>
                        <li class="breadcrumb-item"> <a href="/Neighborhood/Index"> Neighborhood List</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Edit</li>
                    </ol>
                </nav>
                <hr />
                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="NeighborhoodId" />
                            <div class="form-group">
                                <label asp-for="NeighborhoodName" class="control-label"></label>
                                <input asp-for="NeighborhoodName" class="form-control" />
                                <span asp-validation-for="NeighborhoodName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DistrictId" class="control-label"></label>
                                <select asp-for="DistrictId" class="form-control" asp-items="ViewBag.DistrictId"></select>
                                <span asp-validation-for="DistrictId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary" />
                                <a asp-action="Index">Back to List</a>

                            </div>
                        </form>
                    </div>
                </div>


            </div>

        </div>

    </div>

</div>